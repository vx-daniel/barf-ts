{
  "$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
  "assist": {
    "actions": {
      "source": {
        "noDuplicateClasses": "on",
        "organizeImports": "on"
      }
    },
    "enabled": true
  },
  "files": {
    "includes": [
      "**",
      "!!**/dist",
      "!!**/sample-project",
      "!!**/tests",
      "!!**/node_modules",
      "!!docs/api",
      "!!barf-architecture.html"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "complexity": {
        "noUselessTernary": "error",
        "noUselessTypeConstraint": "error"
      },
      "recommended": true,
      "style": {
        "noNestedTernary": "error",
        "useNodejsImportProtocol": "off"
      }
    }
  },
  "vcs": {
    "clientKind": "git",
    "defaultBranch": "main",
    "enabled": true,
    "useIgnoreFile": true
  }
}
