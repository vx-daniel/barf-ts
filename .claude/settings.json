{
  "permissions": {
    "allow": [
      "Read:plans",
      "Write:plans",
      "Bash(bun x tsc:*)",
      "Bash(bun test:*)",
      "Bash(bun run:*)"
    ]
  },
  "defaultMode": "plan",
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "PROJECT_PLANS_DIR": "resources/plans"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/validate-plan.sh\"",
            "timeout": 10
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/plan-permission.sh\"",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "EnterPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/enter-plan-mode.sh\"",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/save-plan.sh\"",
            "timeout": 15
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/enforce-plan-mode-tools.sh\"",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
