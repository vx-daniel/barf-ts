{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": ["bun-types"],
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"],
      "@tools/*": ["./tools/*"],
      "@dashboard/*": ["./tools/dashboard/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*", "tools/**/*"]
}
