{
  "name": "barf",
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run src/index.ts",
    "dev:sample": "bun run src/index.ts --cwd tests/sample-project",
    "run:local": "bun run src/index.ts --config tests/sample-project/.barfrc.local --cwd tests/sample-project auto",
    "audit:local": "bun run src/index.ts --config tests/sample-project/.barfrc.local --cwd tests/sample-project audit --all",
    "run:gh": "bun run src/index.ts --config tests/sample-project/.barfrc.github --cwd tests/sample-project auto",
    "reset:local": "cd tests/sample-project && npm run reset-local",
    "reset:gh": " cd tests/sample-project && npm run reset-gh",
    "test": "bun test",
    "build": "bun build --compile --outfile=dist/barf src/index.ts",
    "docs": "typedoc",
    "format": "npx @biomejs/biome format",
    "format:fix": "npx @biomejs/biome format --write",
    "lint": "npx @biomejs/biome lint",
    "lint:fix": "npx @biomejs/biome lint --fix",
    "check": "bun run format && bun run lint",
    "playground": "bun tools/playground-server.ts --config tests/sample-project/.barfrc.local --cwd tests/sample-project ",
    "dashboard:build": "bun tools/dashboard/build.ts",
    "dashboard": "bun tools/dashboard/build.ts && bun tools/dashboard/server.ts --config tests/sample-project/.barfrc.local --cwd tests/sample-project"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.50",
    "@anthropic-ai/sdk": "^0.78.0",
    "@google/generative-ai": "^0.24.1",
    "@preact/signals": "^2.8.1",
    "@preact/signals-core": "^1.13.0",
    "@sentry/node": "^10.40.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "neverthrow": "^8.0.0",
    "openai": "^6.22.0",
    "ora": "^8.0.0",
    "pino": "^9.0.0",
    "preact": "^10.28.4",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "@boneskull/typedoc-plugin-mermaid": "^0.2.1",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/language": "^6.12.2",
    "@codemirror/state": "^6.5.4",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.39.15",
    "@tailwindcss/cli": "^4.2.1",
    "@types/bun": "latest",
    "codemirror": "^6.0.2",
    "marked": "^17.0.3",
    "pino-pretty": "^13.0.0",
    "tailwindcss": "^4.2.1",
    "typedoc": "^0.28.17",
    "typedoc-github-theme": "^0.4.0",
    "typedoc-plugin-coverage": "^4.0.2",
    "typedoc-plugin-markdown": "^4.10.0",
    "typedoc-plugin-mdn-links": "^5.1.1",
    "typedoc-plugin-missing-exports": "^4.1.2",
    "typedoc-plugin-zod": "^1.4.3",
    "typedoc-rhineai-theme": "^1.2.0",
    "typedoc-theme-hierarchy": "^6.0.0"
  }
}
