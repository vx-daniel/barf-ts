{
  "name": "barf",
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run src/index.ts",
    "dev:sample": "bun run src/index.ts --cwd tests/sample-project",
    "test": "bun test",
    "build": "bun build --compile --outfile=dist/barf src/index.ts",
    "docs": "typedoc",
    "format": "oxfmt --write src/ tests/",
    "format:check": "oxfmt --check src/ tests/",
    "lint": "oxlint src/ tests/",
    "lint:fix": "oxlint --fix src/ tests/",
    "check": "bun run format:check && bun run lint"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.0",
    "zod": "^4.0.0",
    "neverthrow": "^8.0.0",
    "pino": "^9.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "oxfmt": "latest",
    "oxlint": "^1.48.0",
    "pino-pretty": "^13.0.0",
    "typedoc": "^0.28.17"
  }
}
